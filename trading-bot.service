[Unit]
Description=Market AI Trading Bot
After=network.target

[Service]
Type=simple
User=almog
WorkingDirectory=/home/almog/market-ai
ExecStart=/home/almog/market-ai/venv/bin/python /home/almog/market-ai/continuous_trading.py
Restart=always
RestartSec=30
Environment=PYTHONPATH=/home/almog/market-ai

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=trading-bot

[Install]
WantedBy=multi-user.target