# AI Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# Alpaca API Configuration
ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_key_here
ALPACA_ENV=paper  # paper or live

# Risk Management
MAX_GROSS=0.95  # Maximum gross exposure (95% of portfolio)
DAILY_DD_KILLSWITCH=-0.03  # Daily drawdown kill switch (-3%)
MAX_SINGLE_POSITION=0.20  # Maximum single position size (20%)

# Trading Parameters  
MIN_CONFIDENCE=0.95  # Minimum confidence threshold for trades
MIN_TRADE_VALUE=100.0  # Minimum trade value to avoid tiny orders
MAX_OPEN_ORDERS=20  # Maximum number of open orders

# Optional: External Data APIs
FRED_API_KEY=your_fred_api_key_here
STOCKTWITS_TOKEN=your_stocktwits_token_here

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/trading_system.log