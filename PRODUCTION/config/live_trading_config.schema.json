{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "max_position_size": {"type": "number", "minimum": 0, "maximum": 1},
    "baseline_exposure": {"type": "number", "minimum": 0, "maximum": 1},
    "max_exposure": {"type": "number", "minimum": 0, "maximum": 1},
    "order_type": {"type": "string", "enum": ["market", "limit"]},
    "max_orders_per_day": {"type": "integer", "minimum": 1}
  },
  "required": ["max_position_size", "baseline_exposure", "max_exposure", "order_type", "max_orders_per_day"],
  "additionalProperties": false
}
