{
  "universe_filters": {
    "min_price": 2.0,
    "min_adv": 5000000,
    "min_free_float": 300000000,
    "min_listed_days": 252,
    "exclude_halted": true,
    "exclude_bankrupt": true,
    "borrowable_only": true
  },
  
  "data_sources": {
    "ohlcv": {
      "provider": "yfinance",
      "backup_provider": "tiingo"
    },
    "fundamentals": {
      "provider": "edgar",
      "earnings_calendar": true,
      "corporate_actions": true
    },
    "borrow_data": {
      "provider": "interactive_brokers",
      "rates_source": "prime_brokerage"
    },
    "macro": {
      "vix_source": "yahoo",
      "rates_source": "fred",
      "curve_data": true
    },
    "sentiment": {
      "news_source": "gdelt",
      "finbert_enabled": true,
      "social_source": "stocktwits"
    }
  },
  
  "feature_engineering": {
    "technical_features": {
      "returns": ["5d", "21d", "63d", "252d"],
      "volatility": ["20d", "60d"],
      "indicators": ["rsi_14", "macd", "bb_width"],
      "volume": ["surge", "ratio", "gaps"],
      "all_lagged_by": 1
    },
    "fundamental_features": {
      "earnings": ["surprise_pct", "yoy_growth"],
      "margins": ["gross", "operating", "net"],
      "leverage": ["debt_to_equity", "current_ratio"],
      "lag_after_release": true
    },
    "sentiment_features": {
      "news_score": "daily_aggregate",
      "headline_count": "daily",
      "social_activity": "mentions_sentiment",
      "all_lagged_by": 1
    },
    "macro_features": {
      "vix": ["level", "change"],
      "curve": ["2s10s_slope"],
      "sector_etf": ["momentum"],
      "lag": 0
    }
  },
  
  "quality_gates": {
    "max_missingness": 0.05,
    "zscore_cap": 5.0,
    "winsorize_percentiles": [0.01, 0.99],
    "cross_sectional_rank": true
  },
  
  "output_schema": {
    "daily_features": "artifacts/features/daily.parquet",
    "universe_file": "artifacts/universe/nasdaq_tradeable_{date}.csv",
    "required_columns": [
      "Date", "Ticker", "Open", "High", "Low", "Close", "Volume",
      "ret_1d_lag1", "ret_5d_lag1", "vol_20d_lag1", "rsi_14_lag1", 
      "macd_lag1", "bb_width_lag1", "earn_surprise_lag1", "rev_surprise_lag1",
      "yoy_eps_lag1", "sent_score_lag1", "sent_vol_lag1", "social_score_lag1",
      "vix_lag0", "curve_2s10s_lag0", "sector", "industry"
    ]
  },
  
  "validation_report": {
    "output_path": "reports/data_quality_{date}.html",
    "checks": [
      "missingness_audit",
      "outlier_detection", 
      "temporal_consistency",
      "cross_sectional_sanity",
      "leakage_audit"
    ]
  }
}