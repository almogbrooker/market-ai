{
  "universe_filters": {
    "exchange": "NASDAQ",
    "min_price": 3.0,
    "min_adv": 5000000,
    "min_free_float_mcap": 500000000,
    "borrowable_only": true,
    "recompute_frequency": "monthly",
    "exclusions": ["ETFs", "REITs", "ADRs"]
  },
  
  "data_cadence": {
    "primary": "daily",
    "intraday_enabled": false,
    "comment": "Intraday only after proving net alpha after realistic costs"
  },
  
  "signals": {
    "max_features": 10,
    "cross_sectional_zscore": true,
    "target": "next_day_residual_return",
    
    "momentum_core": {
      "12_1m_momentum": {"lookback": 252, "skip_last": 5, "weight": 0.25},
      "3m_momentum": {"lookback": 63, "weight": 0.20},
      "20d_momentum": {"lookback": 20, "weight": 0.15}
    },
    
    "mean_reversion": {
      "5d_reversal": {"lookback": 5, "weight": 0.10},
      "overnight_gap": {"calculation": "overnight_return", "weight": 0.05}
    },
    
    "quality_liquidity": {
      "20d_volatility": {"lookback": 20, "weight": 0.10},
      "20d_dollar_volume": {"lookback": 20, "weight": 0.10},
      "idiosyncratic_vol": {"beta_window": 60, "weight": 0.05}
    }
  },
  
  "model_config": {
    "stage_1": {
      "model_type": "lightgbm_ranker",
      "objective": "lambdarank",
      "per_date_groups": true,
      "regularization": {
        "max_depth": 4,
        "num_leaves": 15,
        "min_data_in_leaf": 50,
        "feature_fraction": 0.8,
        "bagging_fraction": 0.8,
        "lambda_l1": 0.1,
        "lambda_l2": 0.1
      }
    },
    
    "stage_2_optional": {
      "model_type": "patchtst",
      "enabled": false,
      "lookback": 30,
      "patch_len": 5,
      "comment": "Add only if shows OOS lift in stacking"
    }
  },
  
  "training_validation": {
    "walk_forward": {
      "train_months": 24,
      "test_months": 1,
      "purge_days": 10,
      "embargo_days": 5
    },
    
    "scaling": {
      "method": "cross_sectional_per_date",
      "fit_per_fold": true,
      "never_global": true
    },
    
    "gates": {
      "max_train_ic": 0.03,
      "min_oos_ic": 0.005,
      "min_newey_west_tstat": 2.0,
      "min_oos_months": 6,
      "shuffle_test_required": true,
      "permutation_test_required": true
    }
  },
  
  "portfolio_execution": {
    "construction": {
      "frequency": "daily",
      "style": "long_short",
      "long_decile": 10,
      "short_decile": 1,
      "gross_exposure": 1.4,
      "net_exposure_target": 0.0
    },
    
    "neutralization": {
      "beta_neutral": true,
      "sector_neutral": true,
      "benchmark": "QQQ"
    },
    
    "sizing": {
      "vol_target": 0.11,
      "max_position_weight": 0.015,
      "max_sector_weight": 0.22
    },
    
    "costs": {
      "fees_bps": 2,
      "slippage_bps": 3,
      "borrow_bps_annual": 50,
      "execution_timing": "close_or_next_open"
    },
    
    "orders": {
      "default_strategy": "market_close",
      "large_order_strategy": "vwap_twap",
      "adv_threshold": 0.05
    }
  },
  
  "risk_management": {
    "kill_switches": {
      "max_daily_drawdown": 0.02,
      "vix_threshold": 35,
      "max_turnover": 0.8
    },
    
    "position_limits": {
      "max_gross_exposure": 1.6,
      "max_net_exposure": 0.1,
      "max_sector_deviation": 0.05
    }
  },
  
  "deployment_path": {
    "phase_1": "research_sandbox",
    "phase_2": "paper_trading_months": 6,
    "phase_3": "small_capital_live",
    "phase_4": "scale_based_on_capacity"
  },
  
  "performance_targets": {
    "realistic_annual_return": 0.08,
    "target_ic": 0.008,
    "target_sharpe": 1.2,
    "max_drawdown": 0.15,
    "comment": "Conservative targets based on momentum literature"
  }
}